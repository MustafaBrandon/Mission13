@{
}

@model List<string>


<h6>Select a Team to Narrow</h6>
<div class="text-center d-grid ">
    <a class="btn btn-outline-secondary text-center" asp-controller="Home" asp-action="Index" asp-route-team="0">All</a>
    <br />
    @foreach (string t in Model)
    {
        <a class=@(ViewBag.SelectedType == t? " btn btn-primary btn-outline-primary  text-center" : "btn btn-outline-secondary  text-center")
           asp-controller="Home" asp-action="Index" asp-route-team="@t">@t</a>
        <br />
    }
</div>